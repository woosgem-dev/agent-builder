generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SkillIndex {
  id          String   @id @default(cuid())
  name        String
  description String
  owner       String
  repo        String
  skillId     String
  url         String
  githubUrl   String
  tags        String // JSON array stored as string (SQLite has no array type)
  installs    Int      @default(0)
  syncedAt    DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([owner, repo, skillId])
}
